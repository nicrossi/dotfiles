export PATH=/opt/homebrew/bin:$PATH

export EDITOR=nvim
export MYVIMRC="$HOME/dotfiles/nvim/init.vim"
export NVM_DIR="$HOME/dotfiles/.nvm"
export PATH_TO_PLAYGROUND="$HOME/playground"
export PATH_TO_WORKSPACE="$HOME/workspace"

export XDG_CONFIG_HOME="$HOME/dotfiles"

# Path to dotfiles directory
export DOTDIR="${HOME}/dotfiles"

# Path to zsh custom config
export ZDOTDIR="${HOME}/dotfiles/zsh"

# Path to your oh-my-zsh installation.
export ZSH="${ZDOTDIR}/.oh-my-zsh"

# less has coloured output, which also helps with manpages
export LESS=-R
export LESS_TERMCAP_mb=$'\E[1;31m'     # begin blink
export LESS_TERMCAP_md=$'\E[1;36m'     # begin bold
export LESS_TERMCAP_me=$'\E[0m'        # reset bold/blink
export LESS_TERMCAP_so=$'\E[01;44;33m' # begin reverse video
export LESS_TERMCAP_se=$'\E[0m'        # reset reverse video
export LESS_TERMCAP_us=$'\E[1;32m'     # begin underline
export LESS_TERMCAP_ue=$'\E[0m'        # reset underline

# export MANPATH="/usr/local/man:$MANPATH"

# You may need to manually set your language environment
# export LANG=en_US.UTF-8

# Compilation flags
# export ARCHFLAGS="-arch x86_64"

# This should be the last line of the file
# For local changes
# Don't make edits below this
[ -f ".exports.local" ] && source ".exports.local"
